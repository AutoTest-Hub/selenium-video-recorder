<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Selenium Video Recording Comprehensive Test Suite" verbose="1">
    
    <!-- Core Video Recording Tests -->
    <test name="Core Video Recording Tests" preserve-order="true">
        <classes>
            <class name="com.example.automation.test.VideoRecordingTest">
                <methods>
                    <include name="testSingleTabVideoRecording"/>
                    <include name="testMultiTabVideoRecording"/>
                    <include name="testManualTabSwitching"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Video Speed Control Tests -->
    <test name="Video Speed Control Tests" preserve-order="true">
        <classes>
            <class name="com.example.automation.test.VideoSpeedTest">
                <methods>
                    <include name="testSlowMotionVideo"/>
                    <include name="testRealTimeVideo"/>
                    <include name="testVerySlowVideo"/>
                    <include name="testMultiTabSlowMotion"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Comprehensive Flickering Detection Tests -->
    <test name="Flickering Detection Tests" preserve-order="true" enabled="true">
        <classes>
            <class name="com.example.automation.test.FlickeringReproductionTest">
                <methods>
                    <include name="testRapidDOMChangesFlickering"/>
                    <include name="testCSSAnimationFlickering"/>
                    <include name="testRapidTabSwitchingFlickering"/>
                    <include name="testScrollingFlickering"/>
                    <include name="testAjaxFlickering"/>
                    <include name="testMemoryPressureFlickering"/>
                    <include name="testConcurrentOperationsFlickering"/>
                    <include name="testResourceContentionFlickering"/>
                    <include name="testVisualConsistencyValidation"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Stress Testing Suite -->
    <test name="Video Recording Stress Tests" preserve-order="true" enabled="true">
        <classes>
            <class name="com.example.automation.test.VideoRecordingStressTest">
                <methods>
                    <include name="testHighFrequencyFrameCapture"/>
                    <include name="testMultipleTabsStressTest"/>
                    <include name="testMemoryExhaustionStressTest"/>
                    <include name="testRecordingFailureRecovery"/>
                    <include name="testConcurrentRecordingStress"/>
                    <include name="testPlatformSpecificStress"/>
                    <include name="testResourceCleanupStress"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Marathon/Extreme Duration Test (separate due to long runtime) -->
    <test name="Marathon Stress Test" preserve-order="true" enabled="false">
        <classes>
            <class name="com.example.automation.test.VideoRecordingStressTest">
                <methods>
                    <include name="testExtremeDurationRecording"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Parallel Execution Tests -->
    <test name="Parallel Recording Tests" preserve-order="true" enabled="true">
        <classes>
            <class name="com.example.automation.test.ParallelVideoRecordingTest">
                <methods>
                    <include name="testParallelRecordingSessions"/>
                    <include name="testParallelTabOperations"/>
                    <include name="testResourceContentionDetection"/>
                    <include name="testThreadSafetyValidation"/>
                    <include name="testParallelPerformanceBenchmark"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Visual Validation Tests -->
    <test name="Visual Validation Tests" preserve-order="true" enabled="true">
        <classes>
            <class name="com.example.automation.test.VisualValidationTest">
                <methods>
                    <include name="testFrameSequenceConsistency"/>
                    <include name="testColorAccuracyValidation"/>
                    <include name="testTextRenderingValidation"/>
                    <include name="testAnimationSmoothnessValidation"/>
                    <include name="testVisualArtifactDetection"/>
                    <include name="testScreenCaptureCompleteness"/>
                    <include name="testFrameTimingConsistency"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- SmartWait Framework Tests -->
    <test name="SmartWait Framework Tests" preserve-order="true" enabled="true">
        <classes>
            <class name="com.example.automation.test.wait.SmartWaitTest"/>
            <class name="com.example.automation.test.wait.SmartWaitDemoTest"/>
        </classes>
    </test>
    
    <!-- Performance Comparison Tests -->
    <test name="Performance Comparison Tests" preserve-order="true" enabled="false">  <!-- Disabled by default due to long execution time -->
        <classes>
            <class name="com.example.automation.test.wait.PerformanceComparisonTest"/>
        </classes>
    </test>
    
    <!-- Real-World Challenge Tests -->
    <test name="Real-World Challenge Tests" preserve-order="true" enabled="false">  <!-- Disabled by default, enable when testing against real sites -->
        <classes>
            <class name="com.example.automation.test.wait.RealWorldChallengeTest"/>
        </classes>
    </test>
    
    <!-- Quick Smoke Test Suite -->
    <test name="Smoke Tests" preserve-order="true" enabled="false">
        <classes>
            <class name="com.example.automation.test.VideoRecordingTest">
                <methods>
                    <include name="testSingleTabVideoRecording"/>
                </methods>
            </class>
            <class name="com.example.automation.test.FlickeringReproductionTest">
                <methods>
                    <include name="testVisualConsistencyValidation"/>
                </methods>
            </class>
            <class name="com.example.automation.test.VisualValidationTest">
                <methods>
                    <include name="testFrameSequenceConsistency"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>